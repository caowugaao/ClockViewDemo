<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.gx.morgan.clockviewdemo.view.ClockView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:outLineWidth="5dp"
        app:outLineColor="#DD4E40"
        app:outLineScaleLinePadding="10dp"
        app:hourPointerColor="@color/colorPrimary"
        app:centerCircleColor="@color/colorAccent"
        app:hourTextColor="@color/colorAccent"
        app:hourTextSize="22sp"
        app:minutePointerColor="#000000"
        app:scaleLineColor="#DD4E40"
        app:centerCircleRadius="8dp"
        app:secondPointerColor="@android:color/holo_green_dark"
        app:thickScaleLineLength="10dp"
        app:normalScaleLineLength="7dp"
        />
</android.support.constraint.ConstraintLayout>